# Set Alt to be the modifier key
set $mod Mod1

# Window focus shouldn't follow my mouse
focus_follows_mouse no

# Layout mode for new containers
workspace_layout tabbed

# Bindings

# stack
bindsym $mod+s layout stacking
# tab
bindsym $mod+s layout tabbed
# toggle split
bindsym $mod+s layout split


# restart
bindsym $mod+shift+r restart
# reload
bindsym $mod+shift+c restart
# exit
bindsym $mod+shift+e exec "i3-nagbar -t warning -m 'Do you want to exit?' -b 'Yes' 'i3-msg exit'"

bar {
  position top
  status_command i3status
  colours {
    background #ff66cc
    statusline #ffffff
    separator #ffffff
    focused_workspace #ff66cc #ffffff #ff66cc
    active_workspace #ffffff #ffffff #ff66cc
    inactive_workspace #ff66cc #ff66cc #ffffff
    urgent_workspace #ffffff #ff66cc #ffffff
  }
}
