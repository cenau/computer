# Set Alt to be the modifier key
set $mod Mod1

# Window focus shouldn't follow my mouse
focus_follows_mouse no

# Layout mode for new containers
workspace_layout tabbed

# New windows don't have borders
new_window none

# Floating windows do have borders
new_float pixel 1

# class                 border  backgr. text    indicator
client.focused          #ffffcc #ffffcc #000000 #000000
client.focused_inactive #ffffcc #ffffcc #000000 #000000
client.unfocused        #222222 #222222 #888888 #888888
client.urgent           #2f343a #900000 #ffffff #900000
#client.placeholder      #000000 #0c0c0c #ffffff #000000

client.background       #cfcfcf

# Bindings

# Start a term
bindsym $mod+Return exec i3-sensible-terminal

# Trigger i3-input
bindsym $mod+i exec i3-input

# Trigger dmenu
bindsym $mod+d exec dmenu_run

# Kill focused window
bindsym $mod+Shift+q kill

# Change focus
bindsym $mod+Up move up
bindsym $mod+Right move right
bindsym $mod+Down move down
bindsym $mod+Left move keft

# Move focused window
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move keft

# stack
bindsym $mod+s layout stacking
# tab
bindsym $mod+w layout tabbed
# toggle split
bindsym $mod+e layout split

# reload
bindsym $mod+Shift+c reload
# restart
bindsym $mod+Shift+r restart
# exit
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you want to exit?' -b 'Yes' 'i3-msg exit'"

bar {
  status_command i3status
  position top
  colors {
    background #ff66cc
    statusline #ffffff
    separator #ffffff
    focused_workspace #ff66cc #ffffff #ff66cc
    active_workspace #ffffff #ffffff #ff66cc
    inactive_workspace #ff66cc #ff66cc #ffffff
    urgent_workspace #ffffff #ff66cc #ffffff
  }
}
